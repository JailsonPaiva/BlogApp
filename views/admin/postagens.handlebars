<h2>Lista de Postagens: </h2>

<a href="/admin/postagens/add">
    <button class="btn btn-success my-2">Nova postagem</button>
</a>


{{#each postagens}}
	<div class="card mt-4 mb-2">
		<div class="card-body">
			<h4>Título: {{titulo}}</h4>
			<p>Descrição: {{descricao}}</p>
			<small>Data: {{data}}</small>
			<small>Categoria: {{categoria.nome}}</small>
			<br>
			<a href="/admin/postagens/edit/{{_id}}">
				<button class="btn btn-success mt-3">Editar postagem</button>
			</a>
		</div>
	</div>
{{else}}
	<p>Nenhuma postagem registrada!</p>
{{/each}}