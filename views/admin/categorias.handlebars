<h2>Lista de Categorias: </h2>

<a href="/admin/categorias/add">
    <button class="btn btn-success">Nova categoria</button>
</a>

{{#each categorias}}

<div class="card mt-4 mb-4">
    <div class="card-body">
        <h4>{{nome}}</h4>
        <p>
            <smal>Slug: {{slug}}</smal>
        </p>
        <p>
            <smal>Data de criação: {{date}}</smal>
        </p>
    </div>
</div>

{{else}}

{{/each}}