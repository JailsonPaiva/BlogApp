<h1>{{categoria.nome}}</h1>

{{postagens.nome}}
{{#each postagens}}
<div class="card my-4">
	<div class="card-body">
		<h3>{{titulo}}</h3>
		<p>{{descricao}}</p>
		<a href="/postagem/{{slug}}">
			<button class="btn btn-success">Leia mais</button>
		</a>

		<hr>
		
		<small>Categoria: {{categoria.nome}}</small>
		
		<br>

		<small>Data da plublicação: {{data}}</small>
	</div>
</div>

{{else}}

	<h5>Nenhuma postagem</h5>

{{/each}}